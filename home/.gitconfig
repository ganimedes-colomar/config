[alias]
	lgo = log --graph --oneline --abbrev=12
	lago = lgo --all
	lg = log --graph --abbrev=12 --decorate --date=short \
		--format=format:'%C(bold blue)%h%C(reset) (%C(bold cyan)%ad%C(reset), %C(white)\"%s\"%C(reset))%C(bold yellow)%d%C(reset)%n''  %C(magenta)%G?%C(reset) %C(dim white)- %ad, %an - %cd, %cn%C(reset)'
	tree = lg --all
	ff = merge --ff-only
[am]
	messageid = true
[checkout]
	DefaultRemote = alx
[color "diff"]
	old = brightred
	new = brightgreen
[commit]
	gpgSign = true
[core]
	editor = vim
	excludesFile = ~/.config/git/gitignore
[diff]
	algorithm = histogram
	mnemonicPrefix = true
[diff "man"]
	xfuncname = "^\\.S[SHsh] .*$"
[format]
	thread = true
	useAutoBase = whenAble
[init]
	defaultBranch = main
[pager]
	status = true
	log = less -S
[pull]
	ff = only
[sendemail]
	sendmailcmd = mutt -H - && true
